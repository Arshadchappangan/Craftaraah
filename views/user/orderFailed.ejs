<%- include("../../views/partials/user/header") %>

<!-- Hero Section Begin -->
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="/search" method="get">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" name="q" placeholder="What do you need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->

<!-- Order Failed Message Begin -->
<section class="checkout spad">
    <div class="container text-center">
        <div class="order__fail__content">
            <i class="fa fa-times-circle" style="font-size: 100px; color: red;"></i>
            <h3 class="mt-4">Oops! Something went wrong.</h3>
            <p>Your order could not be completed. Please try again or contact support if the issue persists.</p>

            <div class="order-details mt-5">
                <h5>Order Attempt Details</h5>
                <% if (order) { %>
                    <p><strong>Order ID:</strong> <%= order.orderId || 'N/A' %></p>
                    <p><strong>Attempted Payment Method:</strong> <%= order.paymentMethod || 'N/A' %></p>
                <% } else { %>
                    <p class="text-danger">Order information is unavailable.</p>
                <% } %>
                <p><strong>Email:</strong> <%= user.email %></p>
            </div>

            <a href="/checkout" class="site-btn mt-4">Try Again</a>
            <a href="/contact" class="site-btn mt-4">Contact Support</a>
        </div>
    </div>
</section>
<!-- Order Failed Message End -->

<%- include("../../views/partials/user/footer") %>

<script src="/user/js/jquery-3.3.1.min.js"></script>
<script src="/user/js/bootstrap.min.js"></script>
<script src="/user/js/main.js"></script>
