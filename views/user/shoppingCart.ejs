    <!-- Hero Section End -->

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section container" style="background-image: url('/user/img/image.png'); background-size: cover; background-position: center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Shopping Cart</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <span>Shopping Cart</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Products</th>
                                    <th>Price</th>
                                    <th>Offer Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(cart && cart.items && cart.items.length > 0){%>
                                <% for (let i = 0; i < cart.items.length; i++) { %>
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img style="height: 100px;" src="<%=cart.items[i].productId.productImage[0]%>" alt="">
                                        <h5><%=cart.items[i].productId.productName%></h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        ₹<%=cart.items[i].price%>
                                    </td>
                                    <td class="shoping__cart__price">
                                        ₹<%=cart.items[i].productId.discountedPrice%>
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <a href="/updateCart?productId=<%=cart.items[i].productId._id%>&quantity=-1">
                                                    <span class="dec qtybtn" id="minus">-</span>
                                                </a>
                                                <input type="text" value="<%=cart.items[i].quantity%>" id="numberDisplayInput" disabled>
                                                <a href="/updateCart?productId=<%=cart.items[i].productId._id%>&quantity=1">
                                                    <span class="dec qtybtn" id="plus">+</span>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                    <%  let totalPrice = 0;
                                        cart.items[i].totalPrice = cart.items[i].productId.discountedPrice * cart.items[i].quantity 
                                    %>
                                    <td class="shoping__cart__total">
                                        ₹<%=cart.items[i].totalPrice%>
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <a href="/removeFromCart?productId=<%=cart.items[i]._id%>">
                                            <span class="icon_close"></span>
                                        </a>
                                    </td>
                                </tr>
                                <%}%>
                                <%}else{%>
                                <tr>
                                    <td colspan="5" class="text-center">
                                        <h3>No items in cart</h3>
                                    </td>
                                </tr>
                                <%}%>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="/shop" class="primary-btn cart-btn">Continue Shopping</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                            <h5>Discount Coupons</h5> <a href="/coupon"><span>View Coupons</span></a>
                            <form id="couponForm" onsubmit="applyCoupon(event)">
                                <input type="text" placeholder="Enter your coupon code" id="couponInput" name="couponCode">
                                <button type="submit" class="site-btn">APPLY COUPON</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Cart Total</h5>
                        <ul>
                            <li>Subtotal <span>₹<%=subtotal%></span></li>
                            <li>Discount <span>-₹<%=discount%></span></li>
                            <% if(couponDiscount){ %>
                                <li>Special Discount (<%= coupon.couponCode%>) <span>-₹<%= couponDiscount %></span></li>
                            <% } %>
                            <li>Shipping Charge <span>₹<%=shippingCharge%></span></li>
                            <li>Tax (12%) <span>₹<%=tax%></span></li>
                            <li><h5>Total <span>₹<%=total%></span></h5></li>
                        </ul>
                        <a onclick="checkout()" class="primary-btn" style="cursor: pointer;">PROCEED TO CHECKOUT</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->

    <%-include("../../views/partials/user/footer")%>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const minus = document.getElementById('minus');
        const plus = document.getElementById('plus');
        const input = document.getElementById('numberDisplayInput');

        minus.addEventListener('click', () => {
        let currentValue = Number(input.value);
        if (currentValue > 1) {
        input.value = currentValue - 1;
        }
        });

        plus.addEventListener('click', () => {
        let currentValue = Number(input.value);
        input.value = currentValue + 1;
        });

        function checkout() {
            fetch(`/checkCart`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/checkout';
                    } else {
                        Swal.fire({
                        icon: 'info',
                        title: 'Oops!',
                        text: data.message,
                        timer: 1500,
                        showConfirmButton: false
                    });
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Something went wrong.',
                    });
                });
        }

         function applyCoupon(event) {
            event.preventDefault();

            const couponCode = document.getElementById('couponInput').value.trim();
            if (!couponCode) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Warning!',
                    text: 'Please enter a coupon code.',
                });
                return;
            }

            fetch('/applyCoupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ couponCode })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: data.message,
                        timer: 1500,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.reload(); 
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: data.message,
                    });
                }
            })
            .catch(error => {
                console.error("Error:", error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Something went wrong.',
                });
            });
         }

    </script>