            <div class="col-lg-9">

                <div class="main">
                    <div class="card px-auto">

                        <h2 class="mx-auto">Edit Address</h2>
                        
                        <form id="addressForm" method="POST" action="/editAddress" class="border-0 p-3">
                            <input type="hidden" value="<%=source%>" name="source">
                            <div class="row mb-50">
                                <input type="hidden" value="<%=address._id%>" name="id">
                                <div class="form-group col-md-4">
                                    <label for="addressType">Address Type:</label>
                                    <input type="text" class="form-control border-3" id="addressType" name="addressType" value="<%=address.addressType%>">
                                    <div id="addressTypeError" class="error"></div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="name">Name:</label>
                                    <input type="text" class="form-control border-3" id="name" name="name" value="<%=address.name%>">
                                    <div id="nameError" class="error"></div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="city">City:</label>
                                    <input type="text" class="form-control border-3" id="city" name="city" value="<%=address.city%>">
                                    <div id="cityError" class="error"></div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="form-group col-md-4">
                                    <label for="landMark">Landmark:</label>
                                    <input type="text" class="form-control border-3" id="landMark" name="landMark" value="<%=address.landMark%>">
                                    <div id="landMarkError" class="error"></div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="state">State:</label>
                                    <input type="text" class="form-control border-3" id="state" name="state" value="<%=address.state%>">
                                    <div id="stateError" class="error"></div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="pincode">Pincode:</label>
                                    <input type="text" class="form-control border-3" id="pincode" name="pincode" value="<%=address.pincode%>"> 
                                    <div id="pincodeError" class="error"></div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="form-group col-md-4">
                                    <label for="phone">Phone:</label>
                                    <input type="text" class="form-control border-3" id="phone" name="phone" value="<%=address.phone%>">
                                    <div id="phoneError" class="error"></div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="altPhone">Alternate Phone:</label>
                                    <input type="text" class="form-control border-3" id="altPhone" name="altPhone" value="<%=address.altPhone%>">
                                    <div id="altPhoneError" class="error"></div>
                                </div>
                                <div class="form-group col-md-4">
                                    <input class="mx-2" type="checkbox" name="isDefault" value="true"/>
                                    <label for="altPhone">Set as default address</label>
                                </div>
                            </div>
                            <button type="submit" id="submitButton" class="btn btn-primary">Update</button>
                        </form>                        
                    </div>
                </div>
            </div>
        </div>       
        </div>
    </div>
    
    
    <%-include("../../views/partials/user/footer")%>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

            const namePattern = /^[A-Za-z\s]+$/;
            const pincodePattern = /^\d{6}$/;
            const phonePattern = /^\d{10}$/;

        const addressTypeValidate = (event) => {
            const addressType = document.getElementById('addressType').value;
            const addressTypeError = document.getElementById('addressTypeError');

			if (addressType.trim() === '') {
				addressTypeError.style.display = 'block';
				addressTypeError.innerHTML = 'Please Enter the Address Type'
			} else {
				addressTypeError.style.display = 'none';
				addressTypeError.innerHTML = '';
			}
		}
            
        const nameValidate = (event) => {
            const name = document.getElementById('name').value;
            const nameError = document.getElementById('nameError');

			if (name.trim() === '') {
				nameError.style.display = 'block';
				nameError.innerHTML = 'Please Enter a Valid Name'
			} else if (!namePattern.test(name)) {
				nameError.style.display = 'block';
				nameError.innerHTML = 'Name can only contain alphabets and spaces'
			} else {
				nameError.style.display = 'none';
				nameError.innerHTML = '';
			}
		}

        const cityValidate = (event) => {
            const city = document.getElementById('city').value;
            const cityError = document.getElementById('cityError');

            if (city.trim() === '') {
                cityError.style.display = 'block';
                cityError.innerHTML = 'Please Enter the City'
            } else {
                cityError.style.display = 'none';
                cityError.innerHTML = '';
            }
        }

        const landMarkValidate = (event) => {
            const landMark = document.getElementById('landMark').value;
            const landMarkError = document.getElementById('landMarkError');

            if (landMark.trim() === '') {
                landMarkError.style.display = 'block';
                landMarkError.innerHTML = 'Please Enter the Land Mark'
            } else {
                landMarkError.style.display = 'none';
                landMarkError.innerHTML = '';
            }
        }

        const stateValidate = (event) => {
            const state = document.getElementById('state').value;
            const stateError = document.getElementById('stateError');

            if (state.trim() === '') {
                stateError.style.display = 'block';
                stateError.innerHTML = 'Please Enter the State'
            } else {
                stateError.style.display = 'none';
                stateError.innerHTML = '';
            }
        }

        const pincodeValidate = (event) => {
            const pincode = document.getElementById('pincode').value;
            const pincodeError = document.getElementById('pincodeError');

			if (pincode.trim() === '') {
				pincodeError.style.display = 'block';
				pincodeError.innerHTML = 'Please Enter a Valid Pincode'
			} else if (!pincodePattern.test(pincode)) {
				pincodeError.style.display = 'block';
				pincodeError.innerHTML = 'Pincode can only contain numbers'
			} else {
				pincodeError.style.display = 'none';
				pincodeError.innerHTML = '';
			}
		}

        const phoneValidate = (event) => {
            const phone = document.getElementById('phone').value;
            const phoneError = document.getElementById('phoneError');

			if (phone.trim() === '') {
				phoneError.style.display = 'block';
				phoneError.innerHTML = 'Please Enter a Valid Phone number'
			} else if (!phonePattern.test(phone)) {
				phoneError.style.display = 'block';
				phoneError.innerHTML = 'Phone number can only contain numbers'
			} else {
				phoneError.style.display = 'none';
				phoneError.innerHTML = '';
			}
		}

        const altPhoneValidate = (event) => {
            const altPhone = document.getElementById('altPhone').value;
            const altPhoneError = document.getElementById('altPhoneError');

			if (altPhone.trim() === '') {
				altPhoneError.style.display = 'block';
				altPhoneError.innerHTML = 'Please Enter a Valid Phone number'
			} else if (!phonePattern.test(altPhone)) {
				altPhoneError.style.display = 'block';
				altPhoneError.innerHTML = 'Phone number can only contain numbers'
			} else {
				altPhoneError.style.display = 'none';
				altPhoneError.innerHTML = '';
			}
		}


        document.getElementById('addressForm').addEventListener('submit', function(event) {
            event.preventDefault();

            addressTypeValidate();
            nameValidate();
            cityValidate();
            landMarkValidate();
            stateValidate();
            pincodeValidate();
            phoneValidate();
            altPhoneValidate()

            if(addressTypeError.innerHTML || 
            nameError.innerHTML || 
            cityError.innerHTML || 
            landMarkError.innerHTML ||
            stateError.innerHTML ||
            pincodeError.innerHTML ||
            phoneError.innerHTML ||
            altPhoneError.innerHTML){
                return
            }

            event.preventDefault();
            Swal.fire({
            title: "Are you sure?",
            text: "Do you want to update this category?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Update"
        })
        .then((result) => {
            if(result.isConfirmed){
                event.target.submit();
            }
        })

        });


     </script>
     
      