<!-- Font Awesome CDN -->



    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>All departments</span>
                        </div>
                        <ul>
                            <li><a href="#">Fresh Meat</a></li>
                            <li><a href="#">Vegetables</a></li>
                            <li><a href="#">Fruit & Nut Gifts</a></li>
                            <li><a href="#">Fresh Berries</a></li>
                            <li><a href="#">Ocean Foods</a></li>
                            <li><a href="#">Butter & Eggs</a></li>
                            <li><a href="#">Fastfood</a></li>
                            <li><a href="#">Fresh Onion</a></li>
                            <li><a href="#">Papayaya & Crisps</a></li>
                            <li><a href="#">Oatmeal</a></li>
                            <li><a href="#">Fresh Bananas</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form action="#">
                                <div class="hero__search__categories">
                                    All Categories
                                    <span class="arrow_carrot-down"></span>
                                </div>
                                <input type="text" placeholder="What do yo u need?">
                                <button type="submit" class="site-btn">SEARCH</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>+65 11.188.888</h5>
                                <span>support 24/7 time</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg container" data-setbg="user/img/image.png">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Checkout</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <span>Checkout</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <form class="checkout__form" action="/placeOrder" method="POST">
                <h4>Order Details</h4>
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            
                            <div class="shoping__cart__table">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="shoping__product">Products</th>
                                            <th class="shoping__cart__price">Price</th>
                                            <th>Quantity</th>
                                            <th class="shoping__cart__total">Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%for(let i=0;i<cart.items.length;i++){%>
                                        <tr>
                                            <td class="shoping__cart__item">
                                                <img style="height: 60px;" src="<%=cart.items[i].productId.productImage[0]%>" alt="">
                                                <h5><%=cart.items[i].productId.productName%></h5>
                                            </td>
                                            <td>
                                                ₹<%=cart.items[i].productId.salePrice%>
                                            </td>
                                            <td class="shoping__cart__quantity">
                                                <%=cart.items[i].quantity%>
                                            </td>
                                            <td>
                                                ₹<%=cart.items[i].totalPrice%>
                                            </td>
                                        <tr>
                                        <%}%>
                                    </tbody>
                                </table>
                            </div>
                            <div class="">
                                <h5>Shipping</h5>
                                <div>
                                    <h6>Shipping Address</h6>
                                    <div class="row">
                                        <% for(let i = 0; i < address.address.length; i++) { %>
                                            <div class="col-md-6 mb-3">
                                                <input type="radio" name="selectedAddress" value="<%= i %>" id="addr<%= i %>" class="d-none" <%= address.address[i].isDefault ? 'checked' : '' %> />
                                                
                                                <label for="addr<%= i %>" class="selectable-card w-100 h-100 p-3 border rounded d-block">
                                                    <address>
                                                        <strong><%= address.address[i].addressType %></strong><br>
                                                        <%= address.address[i].name %><br>
                                                        <%= address.address[i].landMark %>, <%= address.address[i].city %><br>
                                                        <%= address.address[i].state %> - <%= address.address[i].pincode %><br>
                                                        <%= address.address[i].phone %>, <%= address.address[i].altPhone %><br>
                                                    </address>
                                                    <a href="/editAddress?id=<%= address.address[i]._id %>&source=checkout" class="text-decoration-none">
                                                        Edit
                                                    </a>
                                                </label>
                                                
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="checkout__input__checkbox">
                                Ship to a different address ?
                                <a href="/addAddress?source=checkout" class="text-decoration-none">
                                     Add
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4>Your Order</h4>
                                <div class="checkout__order__products">Products (<%=cart.items.length%>)<span>Total</span></div>
                                <ul>
                                    <%for(let i=0;i<cart.items.length;i++){%>
                                    <li><%=cart.items[i].productId.productName%> <span>₹<%=cart.items[i].totalPrice%></span></li>
                                    <%}%>
                                </ul>
                                <div class="checkout__order__subtotal">Subtotal <span>₹<%=subtotal%></span>
                                    <ul>
                                        <%if(shippingCharge){%>
                                            <li>Shipping Charge <span>₹<%=shippingCharge%></span></li>
                                        <%}else{%>
                                            <li>Shipping <span style="color: rgb(31, 197, 31);">FREE</span></li>
                                        <%}%>
                                        <%if(tax){%>
                                            <li>Tax(12%) <span>₹<%=tax%></span></li>
                                        <%}else{%>
                                            <li>Tax(0%) <span>₹0</span></li>
                                        <%}%>
                                    </ul>

                                </div>
                                
                                <div class="checkout__order__total">Total <span>₹<%=total%></span></div>
        
                                <div class="checkout__input__checkbox">
                                    <label for="payment">
                                        <input type="radio" id="payment" name="paymentMethod" value="payment">
                                        Payment
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="checkout__input__checkbox">
                                    <label for="cod">
                                        <input type="radio" id="cod" name="paymentMethod" value="COD">
                                        Cash on delivery
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <button type="submit" class="site-btn">PLACE ORDER</button>
                            </div>
                        </div>
                    </div>
                </form>
        </div>
    </section>
    <!-- Checkout Section End -->

    <%-include("../../views/partials/user/footer")%>

 

</body>

</html>