                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item zoom-container">
                            <img class="product__details__pic__item--large"
                                src="<%=product.productImage[0]%>" alt="Product image" id="mainImage">
                        </div>
                        <div class="product__details__pic__slider owl-carousel">
                            <%for(let i=0;i<product.productImage.length;i++){%>
                            <img data-imgbigurl="<%=product.productImage[i]%>"
                                src="<%=product.productImage[i]%>" alt="Product image" class="thumbnail" onclick="viewImage(this)">
                                <%}%>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3><%=product.productName%></h3>
                        <h5 class="my-2"><%=product.category.name%></h5>
                        <div class="product__details__rating">
                            <%for(let i=1;i<= 5;i++){%>
                                <%if(i <= overallRating){%>
                                <i class="fa fa-star"></i>
                                <%}else{%>
                                <i class="fa fa-star-o"></i>
                            <%}%>
                            <%}%>
                            <span>(<%=review.length%> reviews)</span>
                        </div>
                        <div class="product__details__price" style="display: inline-block;">₹<%=product.salePrice%></div>
                        <span><strike>₹<%=product.regularPrice%></strike></span>
                        <p><%=product.category.description%></p>
                        <div class="product__details__quantity">
                            <div class="quantity">
                                <div class="pro-qty">
                                    <span class="dec qtybtn" id="minus">-</span>
                                    <input type="text" value="1" id="numberDisplayInput" disabled>
                                    <span class="dec qtybtn" id="plus">+</span>
                                </div>
                            </div>
                        </div>
                        <%if(product.quantity){%>
                        <a href="#" class="primary-btn">ADD TO CART</a>
                        <%}else{%>
                        <a href="#" class="primary-btn" style="background-color: grey; cursor: not-allowed;">OUT OF STOCK</a>
                        <%}%>
                        <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                        <ul>
                            <%if(product.quantity > 0){%>
                            <li><b>Availability</b> <span>Only <%=product.quantity%> left in stock!</span></li>
                            <%}else{%>
                            <li><b>Availability</b> <span><%=product.status%></span></li>
                            <%}%>
                            <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                            <!-- <li><b>Share on</b>
                                <div class="share">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                </div>
                            </li> -->
                        </ul>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                    aria-selected="true">Description</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                                    aria-selected="false">Information</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                                    aria-selected="false">Reviews <span>(1)</span></a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <h6>Products Infomation</h6>
                                    <p><%=product.description%></p>
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-2" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <h6>Product Specifications : </h6>
                                    <ul>
                                        <%for(let i=0;i<product.specifications.length;i++){%>
                                            <li class="my-2"><%=product.specifications[i]%></li>
                                            <%}%>
                                    </ul>
                                    <p></p>
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-3" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <div class="container">
                                        <%for (let i=0;i<review.length;i++){%>
                                        <div v-for="item in list" class="review">
    
                                            <div class="review-photo">
                                              <img src="/user/img/profile_img.png">
                                            </div>
                                            
                                            <div class="review-box">
                                              
                                              <div class="review-author">
                                                <p><strong><%=review[i].userId.name%></strong> - 
                                                    <%for (let j=1;j<=5;j++){%>
                                                        <%if(j <= review[i].rating){%>
                                                            <i style="color:#FFD700;" class="fa fa-star" aria-hidden="true"></i>
                                                            <%}else{%>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i>
                                                    <%}%>
                                                <!-- <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i></p> -->
                                                <%}%>
                                              </div>
                                              <div class="review-comment">
                                                <p><%=review[i].review%></p>
                                              </div>
                                              
                                              <div class="review-date">
                                                <time><%=review[i].createdAt.toLocaleString('default', { month: 'short' })%> - <%=review[i].createdAt.getDate()%>, <%=review[i].createdAt.getFullYear()%></time>
                                              </div>
                                              
                                            </div>
                                              
                                            </div>
                                            <%}%>

                                    <div id="review-header">Write your review</div>
                                    <form action="/review" method="post">
                                        <label class="review-label">Rate this product:</label>
                                        <div class="star-rating">
                                            <span class="star" data-value="5">&#9733;</span>
                                            <span class="star" data-value="4">&#9733;</span>
                                            <span class="star" data-value="3">&#9733;</span>
                                            <span class="star" data-value="2">&#9733;</span>
                                            <span class="star" data-value="1">&#9733;</span>
                                          </div>
                                          <input type="hidden" name="productId" value="<%=product._id%>">
                                          <input type="hidden" id="rating-value" name="rating" />
<br>
                                        <label class="review-label">Insert your Review:</label>
                                        <textarea id="review-input" name="review" v-model="content"></textarea>
                                        <button type="submit" style="float: right;" class="btn btn-success">Submit</button>
                                    </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Details Section End -->

